   <color name="text color" r="0" g="0.75" b="0" a="0.5"/>
   <layout node="spectator info">
      <x type="absolute" value="4"/>
      <y type="relative" value=".17" min="85" max="172"/>
   </layout>
   <auto-scale node="spectator info">
      <y type="simple" ratio=".2" size="200" min="100" max="200"/>
   </auto-scale>
   <node type="transform" name="spectator info">
      <position x="4" y="180"/>
      <node type="text" name="mode">
         <text value="Mode:"/>
         <position x="0" y="0"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="camera">
         <text value="Camera:"/>
         <position x="0" y="-32"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="pos x">
         <text value="X:"/>
         <position x="0" y="-64"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="pos y">
         <text value="Y:"/>
         <position x="0" y="-96"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="pos z">
         <text value="Z:"/>
         <position x="0" y="-128"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="heading">
         <text value="H:"/>
         <position x="0" y="-160"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
   </node>
   <node type="transform" name="logo">
      <node type="box">
         <min x="-99.0" y="-35.0"/>
         <max x="157.0" y="-3.0"/>
         <texture resource="logo"/>
         <depth value="4"/>
         <color r="0" g="1" b="0" a="0.25"/>
      </node>
   </node>
   <layout node="logo">
      <x type="relative" value="0.5"/>
      <y type="relative" value="1.0"/>
   </layout>
   <node type="transform" name="cross">
      <node type="box">
         <min x="-2.0" y="-2.0"/>
         <max x="2.0" y="2.0"/>
         <depth value="4"/>
         <color r="0" g="1" b="0" a="0.5"/>
      </node>
   </node>
   <layout node="cross">
      <x type="relative" value="0.5"/>
      <y type="relative" value="0.5"/>
   </layout>
